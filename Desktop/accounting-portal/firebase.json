{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/blank.html"
      },
      {
        "source": "/admin-secure-panel",
        "destination": "/admin.html"
      },
      {
        "source": "/portal-internal-xyz",
        "destination": "/app.html"
      },
      {
        "source": "/c/:clientId",
        "destination": "/client.html"
      },
      {
        "source": "**",
        "destination": "/app.html"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ]
}